package Y2021M3D26_Exception;
/**
 * 	使用当前类测试异常的抛出
 * @author Grant・Vranes
 *
 */
public class Person {
	private int age;

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		if(age<0 || age>100) {
			throw new RuntimeException("年龄不合法");
		}
		this.age = age;
	}
	
}
