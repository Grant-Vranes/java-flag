package Shoot;

public class Hero {
		// 成员变量
		int width;//宽，实际为英雄机图片的宽和高
		int height;//
		int x;//x坐标
		int y;//y坐标
		int life;//生命
		int doubleFire;//火力值
		//构造方法
		Hero(){
			int width = 97;
			int height = 124;
			int x = 140;
			int y = 140;
			int life = 3;
			int doubleFire = 0;
		}
		// 英雄机切换图片
		void step() {
			x = 140;//英雄机初始位置
			y = 140;
			life = 3;
			doubleFire = 0;//单倍火力
		}
		
		//英雄机随鼠标移动，x/y鼠标的坐标
		void moveTo(int x,int y) {
			
		}
}
