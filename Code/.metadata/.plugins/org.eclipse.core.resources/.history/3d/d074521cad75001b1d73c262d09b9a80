package Shoot;
//蜜蜂
public class Bee {
	int width;
	int height;
	int x;
	int y;
	int xSpeed;//x坐标移动速度
	int ySpeed;//y坐标移动速度
	int awardType;//奖励类型（0或1）
	Bee(){
		width = 60;
		height = 50;
		x = (int)(Math.random()*(400-this.width));
		/*也可以这么写
		 * Random rand = new Random();
		 * x = rand.nextInt(400-this.width);
		 */
		y = -this.height;//y:负的小蜜蜂的高度
		xSpeed = 1;
		ySpeed = 2;
		awardType = rand.nextInt(2); //0或1
	}
	void step() {
		
	}
}
