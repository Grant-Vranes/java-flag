public class SleepDemo2 {
	public static void main(String[] args) {
		Thread th1 = new Thread() {
			public void run() {
				System.out.println("é£è¡Œå™¨é¢„è®¡1000sååˆ°è¾¾ç›®çš„åœ°~");
				try {
					Thread.sleep(1000000);
				} catch (InterruptedException e) {
					System.out.println("é£è¡Œå™¨è­¦æŠ¥ï¼Œé­é‡é£æ¥æµæ˜Ÿ");
				}
			}
		};
		
		Thread th2 = new Thread() {
			public void run() {
				System.out.println("æµæ˜Ÿè§£ä½“ï¼Œç¢æˆ10ä¸ªå°æµæ˜Ÿ");
				for(int i = 0; i < 5; i++) {
					System.out.println("é£æ¥æµæ˜ŸğŸŒ ");
					try {
						Thread.sleep(1000);
					} catch (InterruptedException e) {
						e.printStackTrace();
					}
				}
				
				System.out.println("çˆ†ç‚¸");
				
				//ä¸­æ–­é£è¡Œå™¨çº¿ç¨‹
				th1.interrupt();
			}
		};
		th1.start();
		th2.start();
	}
}
